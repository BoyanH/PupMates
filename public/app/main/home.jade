.col-1(ng-controller="ChatController")
	div.profPhotoContainer
		img.profPhoto(src="{{profPhoto}}")
.col-2
	div.content-home
		h2.user-names
			a(href="#/profile/{{username}}") {{user.firstName}} {{user.lastName}}
		div
			| My pets:
		div.pet-wrapper
			div.dog-container(ng-repeat="dog in dogs")
				div.name-container
					a.dog-name(href="#") {{dog.name}}
				div.birthdate Birthdate: {{dog.age}}
				div.description-pic-container
					div.pic-container
						img(src="{{dog.url}}")
					div.description {{dog.description}}